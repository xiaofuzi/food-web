<% provide(:title,"Update a food menu") %>
<div class="main-box">
<h1> 食谱信息更改 </h1>
<div class="row">
	<div class="col-md-offset-4 col-md-4">
		<%= form_for(@food) do |v| %>

		  
         
           <div class="input-group">
		   <span class="input-group-addon"><%= v.label :食谱名称 %></span>
		   <%= v.text_field :name ,class:"form-control"%>
           </div>
           <div>
		   <div class="input-group">
		   <span class="input-group-addon"><%= v.label :省市地区 %></span>
		   <%= v.text_field :area,class:"form-control" %>
           </div>
           <div>
		   <div class="input-group">
		   <span class="input-group-addon"><%= v.label :插图链接 %></span>
		   <%= v.text_field :cover,class:"form-control" %>
           </div>
           <div>
		   <div class="input-group">
		   <span class="input-group-addon"><%= v.label :描述信息 %></span>
		   <%= v.text_field :description ,class:"form-control"%>
           </div>
           <div>
		   <%= v.label :制作说明 %><br />
		   
		   <%= v.kindeditor :cook, :width => 600, :height => 300, :simple_mode => true %>
           </div><br />
         
           <div class="center">
		   <%= v.submit "Update a food menu", class: "btn  btn-primary" %>
		   </div>
		<% end %>
	</div>
</div>
</div>
