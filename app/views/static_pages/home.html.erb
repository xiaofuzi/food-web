<div class="center main-box">
  <h1>Welcome to the Guangchangwu web,enjoy yourself!</h1>

  
  <div class="row">
   
	<% @videos.each do |video| %>
	  <div class="span3 box">
	  <div class="inner-box">
	  	<%= link_to image_tag(video.cover,size: "180x100", :alt => video.title) , video %>
	  	<div class="bottom-box">
	  	    <p ><%= link_to video.title, video %></p>
	  	</div>
	  </div>
	  </div>
	<% end %>
	
</div>
<% if user_signed_in? %>
  <%= link_to "create a video now!", new_video_path, class: "btn  btn-primary" %>
  
<% end %>
</div>

