<div class="main-box ">
    
    <h1><%= @user.user_name %></h1>
    <div class="row">
    	<div class="col-md-6  update-box">
    	<h2>已发布的食谱信息</h2>
    	<div class="row">
    		<ol>
    	    <% @foods.each do |f| %>
    	    <li>
    	    <div class="col-md-8"><%= link_to truncate(f.name,length:15), f %></div><div class="col-md-2"><%= link_to "delete", f, method: :delete,
                                  data: { confirm: "Are you sure?" } %></div><div class="col-md-2"><%= link_to "update",edit_food_path(f) %></div></li>
    	   <br/>
    	    <% end %>
    	    </ol>
        </div>
    	</div>
    	<div class="col-md-6">
    	<div class="update-box">
    	<h2>已发布的食谱视频</h2>
    	<div class="row">
    		<ol>
    		
    	    <% @videos.each do |f| %>
    	    <li><div class="col-md-8"><%= link_to truncate(f.title,length:15), f %></div><div class="col-md-4"><%= link_to "delete", f, method: :delete,
                                  data: { confirm: "Are you sure?" } %></div></li>
    	   
    	    
    	    <% end %>
    	    </ol>
    	</div>
        </div>
    	</div>
    </div>
</div>